[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	safecrlf = true
  pager = less -F -X
	editor = nvim
[user]
	name = Alexander Chalk
	email = alexchalk17@gmail.com
[color]
	ui = auto
[push]
  default = upstream
[merge]
  ff = only
[fetch]
  prune = true
[alias]
  a = add
  aa = add .
  aac = !git aa && git c
  aaca = !git aa && git ca
  browse = !hub browse
  c = commit
  ca = commit --amend
  sc = commit --amend --no-edit
  ci = !hub ci-status
  co = checkout
  coF = !git co . && git clean -fd
  df = diff --word-diff --color-words
  dfc = diff --word-diff --cached --color-words
  fall = fetch --all
  glog = log -E -i --grep
  hardF = reset --hard
  ipr = !hub pull-request
  issues = !hub browse --issues
  la = log --oneline --decorate --graph --all
  sla = log --oneline --decorate --graph --all -10
  lc = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
  lm = log -1
  upm = !git checkout master && git pull && git checkout -
  p = push
  pf = push --force-with-lease
  pr = !hub compare
  praise = blame
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive
  upmr = !git mup && git rebase master
  rrF = "!f() { git reset --hard HEAD@{$1}; }; f"
  upsr = !git sup && git rebase staging
  s = stash -u
  sl = stash list
  sm = "!f() { git stash push -u -m $1; }; f"
  sp = stash pop
  spn = "!f() { git stash pop stash@{$1}; }; f"
  ups = !git checkout staging && git pull && git checkout -
  uncommit = reset --soft HEAD^
  unstage = reset
[diff]
	renames = copies
[rebase]
	autosquash = true
