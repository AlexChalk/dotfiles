[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	safecrlf = true
  pager = less -F -X
	editor = nvim
[user]
	name = Alexander Chalk
	email = alexchalk17@gmail.com
[color]
	ui = auto
[push]
  default = upstream
[merge]
  ff = only
[fetch]
  prune = true
[alias]
  a = add
  aa = add .
  browse = !hub browse
  c = commit
  ca = commit --amend
  aac = !git aa && git c
  aaca = !git aa && git ca
  car = commit --amend --no-edit
  aacar = !git aa && git car
  ci = !hub ci-status
  co = checkout
  cof = !git co . && git clean -f
  dfc = diff --word-diff --cached --color-words
  df = diff --word-diff --color-words
  fall = fetch --all
	glog = log -E -i --grep
  ipr = !hub pull-request
  issues = !hub browse --issues
  mup = !git checkout master && git pull && git checkout -
  rmup = !git mup && git rebase master
  sup = !git checkout staging && git pull && git checkout -
  rsup = !git sup && git rebase staging
  p = push
  pf = push --force-with-lease
  pr = !hub compare
  praise = blame
  sla = log --oneline --decorate --graph --all
  slas = log --oneline --decorate --graph --all -10
  slu = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
  ri = rebase --interactive
  uncommit = reset --soft HEAD^
  unstage = reset
  hard = reset --hard
  lm = log -1
[diff]
	renames = copies
[rebase]
	autosquash = true
