{
  "adapters": {
    "vscode-node": {
      "name": "node2",
      "type": "node2",
      "command": [
        "node",
        "${gadgetDir}/vscode-node-debug2/out/src/nodeDebug.js"
      ]
    }
  },
  "configurations": {
    "javascript_file": {
      "adapter": "vscode-node",
      "configuration": {
        "name": "JavaScript: Current File",
        "request": "launch",
        "cwd": "${fileDirname}",
        "program": "${file}",
        "args": [],
        "protocol": "auto",
        "sourceMaps": true,
        "stopOnEntry": true,
        "externalConsole": false
      },
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "Y"
        }
      }
    },
    "node_simple": {
      "adapter": "vscode-node",
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "sourceMaps": true,
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "program": "${workspaceRoot}/simple.js",
        "cwd": "${workspaceRoot}"
      }
    },
    "node_9230": {
      "adapter": "vscode-node",
      "configuration": {
        "request": "attach",
        "protocol": "auto",
        "sourceMaps": true,
        "stopOnEntry": true,
        "port": 9230,
        "console": "integratedTerminal"
      }
    }
  }
}
